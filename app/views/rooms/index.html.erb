<h2>Available Rooms</h2>

<% @rooms.each do |room| %>
  <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 15px;">
    <h3><%= room.name %></h3>
    <p>Capacity: <%= room.capacity %></p>
    <p>Price per hour: <%= number_to_currency(room.price_per_hour) %></p>
    <p>Status: <%= room.active? ? "Available" : "Unavailable" %></p>

    <% if room.active? %>
      <%= link_to "Book this room", new_room_booking_path(room), class: "btn btn-primary" %>
    <% else %>
      <span style="color: gray;">Booking unavailable</span>
    <% end %>
  </div>
<% end %>

<%= form_with model: [:admin, room], local: true do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :capacity %><br>
    <%= f.number_field :capacity %>
  </div>

  <div>
    <%= f.label :price_per_hour %><br>
    <%= f.number_field :price_per_hour, step: 0.01 %>
  </div>

  <div>
    <%= f.label :active %><br>
    <%= f.check_box :active %>
  </div>

  <br>
  <%= f.submit %>
<% end %>
